            <version>1.14.3</version>
        </dependency>

        <!-- OpenCV or Apache Commons Imaging for color extraction -->
        <dependency>
            <groupId>org.openpnp</groupId>
            <artifactId>opencv</artifactId>
            <version>4.5.1-2</version>
        </dependency>

        <!-- Lombok (optional, for reducing boilerplate code) -->
